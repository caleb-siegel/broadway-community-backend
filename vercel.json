{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 30,
                "installCommand": "bash vercel-build.sh && pip install -r requirements.txt"
            }
        }
    ],
    "routes": [
        {"src": "/(.*)", "dest": "app.py"}
    ],
    "env": {
        "CHROME_BIN": "/usr/bin/google-chrome",
        "CHROMEDRIVER_PATH": "/usr/local/bin/chromedriver"
    }
}